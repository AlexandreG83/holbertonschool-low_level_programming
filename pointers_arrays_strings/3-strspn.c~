#include "main.h"

/**
 * _strspn - gets the length of a prefix substring
 * @s: pointer to the string to search
 * @accept: pointer to the string containing accepted characters
 *
 * Return: number of bytes in the initial segment of s consisting
 *         only of bytes from accept
 */
unsigned int _strspn(char *s, char *accept)
{
unsigned int compte = 0;
unsigned int i, j;
int octets;

i = 0;
while (s[i] != '\0')
{
	octets = 0;
	j = 0;
	while (accept[j] != '\0')
	{
		if (s[i] == accept[j])
		{
			octets = 1;
			break;
		}
		j++
	}
	if (octets == 0)
	{
		return (compte);
	}
	compte++;
	i++;
	}
return (compte);
}
